<?xml version="1.0" encoding="utf-8" ?>
<configuration>
		<state name="main">
			<javascript>
				<object name="GridManager" />
			</javascript>
			<toolbar>
				<control id="add" title="BTN_ADD" type="button" onclick="add" />
				<control id="edit" title="BTN_EDIT" type="button" onclick="edit" />
				<control id="delete" title="BTN_DELETE" type="button"
					onclick="del" />
				<control type="separator" id="sep01" />
				<control type="button" id="up" title="BTN_MOVE_UP" onclick="up" />
				<control type="button" id="down" title="BTN_MOVE_DOWN"
					onclick="down" />
				<control type="separator" id="sep02" />
				<control id="close" title="BTN_CLOSE" type="button" onclick="close" />
			</toolbar>
		</state>
		<state name="add">
			<uri_patterns>
				<pattern>/add/</pattern>
			</uri_patterns>
			<javascript>
				<object name="Form" />
			</javascript>
			<fields>
				<field name="tmpl_id" />
				<field name="tmpl_icon" sort="0"/>
				<!-- <field name="tmpl_preview"/>-->
				<field name="tmpl_name" />
				<field name="tmpl_content" />
				<field name="tmpl_layout" />
			</fields>
			<toolbar>
				<control id="save" title="BTN_SAVE" type="button" onclick="save" />
				<control id="after_save_action" title="TXT_AFTER_SAVE_ACTION"
					type="select"
				>
					<options>
						<option id="close">BTN_CLOSE</option>
						<option id="add">BTN_ADD</option>
					</options>
				</control>
				<control id="sep1" type="separator" />
				<control id="list" title="BTN_CANCEL" type="button" onclick="close" />
			</toolbar>
		</state>
		<state name="edit">
			<uri_patterns>
				<pattern>/[int]/edit/</pattern>
			</uri_patterns>
			<javascript>
				<object name="Form" />
			</javascript>
			<fields>
				<field name="tmpl_id" />
				<field name="tmpl_icon" />
				<!--
					<field name="tmpl_preview"/>
				-->
				<field name="tmpl_name" />
				<field name="tmpl_content" />
				<field name="tmpl_layout" />
			</fields>
			<toolbar>
				<control id="save" title="BTN_SAVE" type="button" onclick="save" />
				<control id="list" title="BTN_CLOSE" type="button" onclick="close" />
			</toolbar>
		</state>
		<state name="save">
			<uri_patterns>
				<pattern>/save/</pattern>
			</uri_patterns>
		</state>
		<state name="upload">
			<uri_patterns>
				<pattern>/upload/</pattern>
			</uri_patterns>
		</state>
		<state name="getRawData">
			<uri_patterns>
				<pattern>/get-data/</pattern>
				<pattern>/get-data/page-[pageNumber]/</pattern>
				<pattern>/get-data/[sortField]-[sortDir]/</pattern>
				<pattern>/get-data/[sortField]-[sortDir]/page-[pageNumber]/</pattern>
			</uri_patterns>
		</state>
		<state name="delete">
			<uri_patterns>
				<pattern>/[int]/delete/</pattern>
			</uri_patterns>
		</state>
		<state name="up" rights="3">
			<uri_patterns>
				<pattern>/[int]/up/</pattern>
			</uri_patterns>
		</state>
		<state name="down" rights="3">
			<uri_patterns>
				<pattern>/[int]/down/</pattern>
			</uri_patterns>
		</state>
</configuration>
<?xml version="1.0" encoding="utf-8" ?>
<configuration>

		<state name="main">
			<javascript>
				<object name="PageEditor"/>
			</javascript>
	    </state>
		<state name="save" rights="3">
			<uri_patterns>
				<pattern>/save-text/</pattern>
			</uri_patterns>
		</state>
		<state name="cleanup" rights="3">
			<uri_patterns>
				<pattern>/cleanup/</pattern>
			</uri_patterns>
		</state>
        <state name="source" rights="3">
            <uri_patterns>
                <pattern>/source/</pattern>
            </uri_patterns>
        </state>
		<state name="imageManager" rights="3">
			<uri_patterns>
				<pattern>/imagemanager/</pattern>
			</uri_patterns>
		</state>
		<!-- Сквозной метод -->
		<state name="fileLibrary" rights="3">
			<uri_patterns>
				<pattern>/file-library/[any]/</pattern>
			</uri_patterns>
		</state>

</configuration>
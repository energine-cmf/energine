<?xml version="1.0" encoding="utf-8" ?>
<configuration>

        <state name="main">
            <javascript>
                <object name="GridManager"/>
            </javascript>
            <fields>
                <field name="theme_id"/>
                <field name="theme_created" outputFormat="%E"/>
                <field name="smap_id" type="custom"/>
                <field name="theme_name"/>
                <field name="u_id" type="custom"/>
                <!--<field name="theme_closed"/>-->
            </fields>
            <toolbar>
                <control id="edit" title="BTN_EDIT" type="button" onclick="edit"/>
                <control id="delete" title="BTN_DELETE" type="button"
                         onclick="del"/>
            </toolbar>
        </state>
        <state name="edit">
            <uri_patterns>
                <pattern>/[int]/edit/</pattern>
            </uri_patterns>
            <javascript>
                <object name="Form"/>
            </javascript>
            <toolbar>
                <control id="save" title="BTN_SAVE" type="button" onclick="save"/>
                <control id="list" title="BTN_CLOSE" type="button" onclick="close"/>
            </toolbar>
        </state>
        <state name="save" rights="3">
            <uri_patterns>
                <pattern>/save/</pattern>
            </uri_patterns>
        </state>
        <state name="upload" rights="2">
            <uri_patterns>
                <pattern>/upload/</pattern>
            </uri_patterns>
        </state>
        <state name="delete" rights="2">
            <uri_patterns>
                <pattern>/[int]/delete/</pattern>
            </uri_patterns>
        </state>
        <state name="getRawData" rights="2">
            <uri_patterns>
                    <pattern>/get-data/</pattern>
                    <pattern>/get-data/page-[pageNumber]/</pattern>
                    <pattern>/get-data/[sortField]-[sortDir]/</pattern>
                    <pattern>/get-data/[sortField]-[sortDir]/page-[pageNumber]/</pattern>
            </uri_patterns>
        </state>
        <state name="imageManager" rights="3">
            <uri_patterns>
                <pattern>/imagemanager/</pattern>
            </uri_patterns>
        </state>
        <state name="fileLibrary" rights="3">
            <uri_patterns>
                <pattern>/file-library/</pattern>
                <pattern>/file-library/[any]/</pattern>
            </uri_patterns>
        </state>
        <state name="cleanup" rights="3">
            <uri_patterns>
                <pattern>/cleanup/</pattern>
            </uri_patterns>
        </state>

</configuration>
<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<methods>
		<method name="main">
			<javascript>
				<object name="GridManager" />
			</javascript>
            <fields>
                <field name="comment_id" />
                <field name="comment_created" outputFormat="%E"/>
                <field name="u_id"/>
                <field name="target_id"/>
                <field name="comment_name"/>
            </fields>
			<toolbar>
				<control id="edit" title="BTN_EDIT" type="button" onclick="edit" />
				<control id="delete" title="BTN_DELETE" type="button" onclick="del" />
			</toolbar>
		</method>
		<method name="edit">
			<uri_patterns>
				<pattern>/[int]/edit/</pattern>
			</uri_patterns>
			<javascript>
				<object name="Form" />
			</javascript>
			<toolbar>
				<control id="save" title="BTN_SAVE" type="button" onclick="save" />
				<control id="list" title="BTN_CLOSE" type="button" onclick="close" />
			</toolbar>
		</method>
		<method name="save" rights="3">
			<uri_patterns>
				<pattern>/save/</pattern>
			</uri_patterns>
		</method>
		<method name="delete" rights="2">
			<uri_patterns>
				<pattern>/[int]/delete/</pattern>
			</uri_patterns>
		</method>
		<method name="getRawData" rights="2">
			<uri_patterns>
				<pattern>/get-data/</pattern>
				<pattern>/get-data/page-[pageNumber]/</pattern>
				<pattern>/get-data/[sortField]-[sortDir]/</pattern>
				<pattern>/get-data/[sortField]-[sortDir]/page-[pageNumber]/</pattern>
			</uri_patterns>
		</method>
		<method name="cleanup" rights="3">
			<uri_patterns>
				<pattern>/cleanup/</pattern>
			</uri_patterns>
		</method>
	</methods>
</configuration>